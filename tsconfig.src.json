{
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "moduleResolution": "node",
    "outDir": "dist",
    "noUnusedLocals": false
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
