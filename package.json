{
  "name": "ts-boiler",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "typecheck": "tsc -p . --noEmit",
    "lint:eslint": "eslint . --ext ts --cache",
    "lint:prettier": "yarn run:prettier --check",
    "lint:cspell": "cspell lint './**/*.{ts,js,json,md,yml,yaml}' --gitignore --cache",
    "lint": "run-s 'lint:*'",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn run:prettier --write",
    "fix": "run-s 'fix:*'",
    "run:prettier": "prettier '**/*.{ts,js,json,md,yml,yaml}'",
    "lint-staged": "lint-staged --allow-empty -r",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.1",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "commitizen": "^4.2.4",
    "cspell": "^5.20.0",
    "esbuild": "^0.14.39",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "tsd": "^0.20.0",
    "typescript": "^4.6.4"
  }
}
